    <div class="carousel-inner">
        @* <div class="carousel-item active">
        <img src="~/images/carousel1.png" class="d-block w-100" alt="Product 1">
        </div>
        <div class="carousel-item">
        <img src="~/images/carousel2.png" class="d-block w-100" alt="Product 2">
        </div>
        <div class="carousel-item">
        <img src="~/images/carousel3.png" class="d-block w-100" alt="Product 3">
        </div> *@
        <!-- Area 2: Dynamic Carousel -->
        @await Html.PartialAsync("_Carousel", (IEnumerable<practice1.Models.Carousel>)ViewBag.Carousels)
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Top Low Stock Products -->
<div class="container">
    <h2>Top 5 Low Stock Products</h2>
    @if (ViewBag.TopLowStockProducts != null)

    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Stock Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in ViewBag.TopLowStockProducts)

                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category?.Name</td>
                        <td>@product.StockQuantity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
