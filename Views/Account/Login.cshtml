@model practice1.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@* 
    Login form with Bootstrap styling
    This form allows users to authenticate with their email and password
    It includes validation for required fields and a remember me option
*@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    @* Form posts to the Login action in AccountController *@
                    <form asp-action="Login" method="post">
                        @* Display validation errors at the model level *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        @* Email input field with floating label *@
                        <div class="form-floating mb-3"> 
                            <input asp-for="Email" class="form-control" id="Email" placeholder="name@example.com" /> 
                            <label asp-for="Email"></label> 
                            <span asp-validation-for="Email" class="text-danger"></span> 
                        </div>
                        
                        @* Password input field with floating label *@
                        <div class="form-floating mb-3"> 
                            <input asp-for="Password" class="form-control" type="password" id="Password" placeholder="Password" /> 
                            <label asp-for="Password"></label> 
                            <span asp-validation-for="Password" class="text-danger"></span> 
                        </div>
                        
                        @* Remember me checkbox *@
                        <div class="form-check mb-3"> 
                            <input asp-for="RememberMe" class="form-check-input" id="RememberMe" /> 
                            <label class="form-check-label" asp-for="RememberMe"></label> 
                        </div>
                        
                        @* Submit button *@
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                        
                        @* Link to registration page *@
                        <div class="mt-3 text-center"> <a asp-action="Register">Create an account</a> </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* Include client-side validation scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}