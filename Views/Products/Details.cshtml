@model practice1.Models.Product

@{ 
    ViewData["Title"] = "Product Details"; 
}

<div class="container mt-4">
    <h1>Product Details</h1>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description ?? "N/A"</dd>

                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">@if (!string.IsNullOrEmpty(Model.ImageUrl)) { <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 200px;" />; } else { <span>N/A</span>; }</dd>

                <dt class="col-sm-2">Stock Quantity</dt>
                <dd class="col-sm-10">@Model.StockQuantity</dd>

                <dt class="col-sm-2">Category</dt>
                <dd class="col-sm-10">@Model.Category?.Name ?? "N/A"</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>